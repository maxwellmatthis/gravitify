{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsxImportSource": "preact",
    "isolatedModules": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "node"
  }
}