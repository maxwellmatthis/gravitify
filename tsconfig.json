{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsxImportSource": "preact",
    "lib": [
      "ES2016",
      "DOM"
    ],
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  }
}